@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>


<div class="ui segment">
    <div class="ui two column stackable center aligned grid">
        <div class="ui vertical divider">Or</div>
        <div class="middle aligned row">
            <div class="column">
                
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="ui red text"></div>

                <div class="ui left icon input">
                    <input asp-for="Input.UserName" autocomplete="username" aria-required="true" placeholder="Username"/>
                    <span asp-validation-for="Input.UserName" class="ui red text"></span>
                    <i class="user icon"></i>
                </div>

                <div class="ui inverted divider"></div>

                <div class="ui left icon input">
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Password"/>
                    <span asp-validation-for="Input.Password" class="ui red text"></span>
                    <i class="lock icon"></i>
                </div>
                <div class="ui inverted divider"></div>

                <div class="ui list">
                    <div class="item">
                        <div class="ui checkbox">
                            <input type="checkbox">
                            <label asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                <div class="item">
                    <div>
                        <button type="submit" class="ui button login-submit">Log in</button>
                    </div>

                </div>
                </div>

                </form>
            </div>
            <div class="column">
                <div class="ui icon header">
                    <i class="user icon"></i>
                    Create a new user
                </div><br/>
                <a class="ui primary button" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                    Register
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
