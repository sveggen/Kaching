@model Kaching.ViewModels.ExpenseEventViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ExpenseId" />
            <input type="hidden" asp-for="Expense.CreatorId" />
            <input type="hidden" asp-for="Expense.Created" />

            <div class="form-group">
                <label asp-for="Expense.Price" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text">€</span>
                    <input asp-for="Expense.Price" class="form-control" placeholder="0.0">
                </div>
                <span asp-validation-for="Expense.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Category" class="control-label"></label>
                <select asp-for="Expense.Category" class ="form-control" asp-items="Html.GetEnumSelectList<Category>()"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Payment Status</label>
                <select asp-for="PaymentStatus" class ="form-control" asp-items="Html.GetEnumSelectList<PaymentStatus>()">
                </select>
            </div>
            <div class="form-group">
                <label class="control-label required">Paid by</label>
                <select asp-for="BuyerId" class ="form-control" asp-items="ViewBag.PersonId"></select>
            </div>            
            <div class="form-group">
                <label asp-for="Expense.Description" class="control-label"></label> <i> - Not Required</i>
                <textarea asp-for="Expense.Description" class="form-control"> </textarea>
                <span asp-validation-for="Expense.Description" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
    <a class="ui icon button" asp-action="Delete" asp-route-id="@Model.ExpenseEventId">
        <i class="trash alternate icon"></i>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
