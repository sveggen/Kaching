@using System.Globalization
@model Kaching.ViewModels.ExpenseIndexViewModel

@{
    var currentMonthNumber = Model.MonthNumber;
}



    <div class="active item">Tab</div>

<div class="ui top attached tabular menu">
    @for (int i = 0; i <= 12; i++) 
    {
        var monthName = CultureInfo.CurrentCulture.DateTimeFormat.MonthNames[i];
        var monthNumber = i + 1;

        @if (currentMonthNumber == monthNumber)
        {
            <div class="active item" aria-current="page" href="/">
                <strong>@monthName</strong>
            </div>

        } else {

            <div class="item" href="/Expenses/@monthName">
                @monthName
            </div>
        }
    }

</div>