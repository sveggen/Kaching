@model Kaching.ViewModels.ExpenseVm

@{
    ViewData["Title"] = "Edit Recurring";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Recurring</h1>


<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRecurring" class="ui form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="BaseExpenseId" />
            <input type="hidden" asp-for="Expense.CreatorId" />
            <input type="hidden" asp-for="Expense.Created" />

            <div class="field">
                <label class="ui label">Price</label>
                <div class="ui right labeled input">
                    <label for="amount" class="ui label">€</label>
                    <input asp-for="Expense.Price" placeholder="Price">
                    <div class="ui basic label">.00</div>
                </div>
                <span asp-validation-for="Expense.Price" class="text-danger"></span>
            </div>
            <div class="field">
                <label class="ui label">Category</label>
                <select asp-for="Expense.Category" asp-items="Html.GetEnumSelectList<Category>()"></select>
            </div>
            <div class="field">
                <label class="ui label">Transfer Status</label>
                <select asp-for="PaymentType" asp-items="Html.GetEnumSelectList<PaymentType>()">
                </select>
            </div>
            <div class="field">
                <label class="ui label">Paid by</label>
                <select asp-for="ResponsibleId" class ="form-control" asp-items="ViewBag.PersonId"></select>
            </div>            
            <div class="field">
                <label class="ui label">Description <i>: Not Required</i> </label>
                <textarea asp-for="Expense.Description"> </textarea>
                <span asp-validation-for="Expense.Description" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div>
        <a class="ui icon button" asp-action="Delete" asp-route-id="@Model.ExpenseId">
            <i class="ui button red">
                Delete
            </i>
        </a>
        @if (Model.Frequency != Frequency.Once)
        {
            <a class="ui icon button" asp-action="DeleteRecurring" asp-route-id="@Model.ExpenseId">
                <i class="ui button red">
                    Delete all recurring events
                </i>
            </a>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
